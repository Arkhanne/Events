<article>
  <header>
    <%= image_for(@event) %>
    <h2><%= @event.name %></h2>
  </header>
  <p>
    <%= @event.description %>
  </p>
  <h3>When</h3>
  <p>
    <%= @event.starts_at %>
  </p>
  <h3>Where</h3>
  <p>
    <%= @event.location %>
  </p>
  <h3>Price</h3>
  <p>
    <%= format_price(@event) %>
  </p>
  <h3>Capacity</h3>
  <p>
    <%= pluralize(@event.capacity, 'spot') %>
  </p>

  <%= link_to "Who's Registered?", event_registrations_path(@event) %>
  <%= link_to "Register!", new_event_registration_path(@event), class: "button ok register" %>
</article>

<%= link_to "Edit", edit_event_path(@event) %> |
<%= link_to "Delete", event_path(@event), method: :delete, data: {confirm: 'Are you sure?'} %>
